{
  "database": {
    "rules": "./rules.bolt"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/get-invited-user/**",
        "function": "getUser"
      },
      {
        "source": "/api/activate-user/**",
        "function": "activateUser"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
